  (fn (1)))
      ;^ ERROR values can only be bound to variables or destructured into lists

(def duplicate-param
  (fn (x x)))
        ;^ ERROR duplicate definition

(def user-compile-error
  (compile-error "Some message")) ;~ ERROR Some message